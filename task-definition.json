{
    "containerDefinitions": [
        {
            "command": [
                "bundle",
                "exec",
                "rails",
                "s"
            ],
            "environment": [
                {
                    "name": "POSTGRES_HOST_AUTH_METHOD",
                    "value": "trust"
                },
                {
                    "name": "POSTGRES_PASSWORD",
                    "value": "dupacycki1"
                },
                {
                    "name": "POSTGRES_USER",
                    "value": "automation"
                },
                {
                    "name": "POSTGRES_DB",
                    "value": "automation_production"
                },
                {
                    "name": "INFLUX_HOST",
                    "value": "influx"
                },
                {
                    "name": "POSTGRES_HOST",
                    "value": "automation-postgres.cqjw7kovlc3w.us-east-2.rds.amazonaws.com"
                },
                {
                    "name": "POSTGRES_PORT",
                    "value": "5432"
                },
                {
                    "name": "RAILS_ENV",
                    "value": "production"
                }
            ],
            "essential": true,
            "image": "252636471646.dkr.ecr.us-east-2.amazonaws.com/automation:latest",
            "links": [
                "influx:influx"
            ],
            "memory": 512,
            "name": "api",
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000
                }
            ]
        },
        {
            "essential": true,
            "image": "252636471646.dkr.ecr.us-east-2.amazonaws.com/automation-influx:latest",
            "memory": 512,
            "mountPoints": [
                {
                    "containerPath": "/var/lib/influxdb",
                    "sourceVolume": "HomeEc2-UserInflux"
                }
            ],
            "name": "influx"
        },
        {
            "essential": true,
            "image": "252636471646.dkr.ecr.us-east-2.amazonaws.com/automation-proxy:latest",
            "links": [
                "api",
                "web"
            ],
            "memory": 64,
            "name": "nginx",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                },
                {
                    "containerPort": 443,
                    "hostPort": 443
                }
            ]
        },
        {
            "essential": true,
            "image": "252636471646.dkr.ecr.us-east-2.amazonaws.com/automation-web:latest",
            "memory": 512,
            "name": "web",
            "portMappings": [
                {
                    "containerPort": 3001,
                    "hostPort": 3001
                }
            ]
        }
    ],
    "family": "automation-task",
    "volumes": [
        {
            "host": {
                "sourcePath": "/home/ec2-user/influx"
            },
            "name": "HomeEc2-UserInflux"
        }
    ]
}
